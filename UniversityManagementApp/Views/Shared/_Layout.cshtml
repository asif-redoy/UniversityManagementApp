<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/main.css")
    @Styles.Render("~/Content/animate.min.css")
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/responsive.css")
    @Styles.Render("~/Content/font-awesome.css")
    @Styles.Render("~/Content/jquery-ui.css")
    @Styles.Render("~/Content/main.css")




    @Scripts.Render("~/bundles/modernizr")


</head>
<body class="homepage" style="background-color:black ">
    <header id="header">
        <div class="top-bar">
            <div class="container">

            </div><!--/.container-->
        </div><!--/.top-bar-->
        <nav class="navbar navbar-inverse" role="banner">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#"> PERFECT SOLUTION <!--  <img src="images/logo.png" alt="logo">--></a>
                </div>

                <div class="collapse navbar-collapse navbar-right">



                    <ul class="nav navbar-nav">
                        <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">DEPARTMENTS <i class="fa fa-angle-down"></i></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Save Department", "Save", "Department")</li>
                                <li>@Html.ActionLink("View Department", "ViewDepartment", "Department")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">COURSES <i class="fa fa-angle-down"></i></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Save Course", "Save", "Course")</li>
                                <li>@Html.ActionLink("View Course", "Index", "CourseView")</li>


                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">TEACHERS <i class="fa fa-angle-down"></i></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Save Teacher", "Save", "Teacher")</li>
                                <li>@Html.ActionLink("Course Assign To Techer", "Index", "CourseAssign")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">ALLOCATION & SCHEDULE <i class="fa fa-angle-down"></i></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Allocate Classrooms", "Index", "AllocateClassRoom")</li>
                                <li>@Html.ActionLink("Class Schedule View", "Index", "ClassScheduleView")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">STUDENTS <i class="fa fa-angle-down"></i></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Register Student", "Index", "Student")</li>
                                <li>@Html.ActionLink("Enroll In A Course", "Index", "EnrollCourse")</li>
                                <li>@Html.ActionLink("Save Result", "Index", "StudentResult")</li>
                                <li>@Html.ActionLink("View Result", "Index", "ViewResult")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">UNASSAIGN <i class="fa fa-angle-down"></i></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Unassign All Course", "UnAssignAllCourses", "CourseAssign")</li>
                                <li>@Html.ActionLink("Unallocate All Classroom", "UnallocateAllClassRomm", "AllocateClassRoom")</li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div><!--/.container-->
        </nav><!--/nav-->
    </header>
    
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>    
    

    @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)


</body>
</html>
